@model List<Course>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="a"> CourseCatalogApp</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Kurslar</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-3">
        <main>
            @foreach (var kurs in Model)
            {
                    <div class="card mb-3">
                        <div class="row">
                            <div class="col-md-3">
                                <img src="~/img/@kurs.Image" class="img-fluid rounded-start" , alt="">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@kurs.Title</h5>
                                    <p class="card-text">@kurs.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
            }
        </main>
    </div>

</body>

</html>