@model Course

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
</head>

<body>

    <div class="container mt-3">
        <main>
            <div class="card mb-3" id="@Model.Id">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/img/@Model.Image" class="img-fluid rounded-start" , alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Title</h5>
                            <p class="card-text">@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>

</html>